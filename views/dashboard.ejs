<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - UniversalManager</title>
    <link rel="stylesheet" href="/assets/styles.css">

    <style>
      #createUrl {
        color: blue;
      }
    </style>
</head>
<body>
    <%- include('header'); %>

    <% if(workspaces.length < 1) { %>
      <div class="container px-5 py-24 mx-auto">
        <center>
          <h1>It looks like you don't have any workspaces, wanna <a href="/workspaces/create" id="createUrl">create one</a>?</h1>
        </center>
      </div>
    <% } else { %>
      <section class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto">
          <div class="flex flex-wrap -m-4">
            
            <% workspaces.forEach(function(workspace){ %>
              <div class="p-4 md:w-1/3">
                <a href="/workspaces/<%- workspace["workspace"]["ID"] %>">
                  <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
                    <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="/assets/images/workspaces/logos/<%- workspace["workspace"]["banner"] %>.png">
                    <div class="p-6">
                      <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">WORKSPACE</h2>
                      <h1 class="title-font text-lg font-medium text-gray-900 mb-3"> <%- workspace["workspace"]["name"] %> </h1>
                      <p class="leading-relaxed mb-3"><%- workspace["workspace"]["description"] %></p>
                      <div class="flex items-center flex-wrap ">
                        <span class="text-gray-400 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-200">
                          <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z" />
                          </svg><%- workspace["workspace"]["ReportsCount"] %>
                        </span>
                        <span class="text-gray-400 inline-flex items-center leading-none text-sm">
                          <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                          </svg><%- workspace["workspace"]["ReportsCount"] %>
                        </span>
                      </div>
                    </div>
                  </div>
                </a>
              </div> 
            <% }); %>
            
          </div>
        </div>
      </section>
    <% } %>

    <%- include('footer'); %>
</body>
</html>